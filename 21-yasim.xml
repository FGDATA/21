<?xml version="1.0" encoding="UTF-8"?>

<!-- Santo Dumont N 21 "Demoiselle" 1909 : 2009 Emmanuel BARANGER

     Winspan : 5 m                            ( 16,4 ft)
     Lenght  : 8 m                            ( 26.2 ft) 
     Masse   : 93 kg (pilote 50 kg)           (205.0 lb - 110 lb)
     Engine  : 1 x Darrack 30 ch
     Speed   : 90 km/h                        ( 50.0 kt) 

-->

<airplane mass="500">

  <!-- Approach configuration -->
  <approach speed="20" aoa="15">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.5"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/sim/weight[0]/weight-lb" value ="110"/>
  </approach>

  <!-- Cruise configuration -->
  <cruise speed="50" alt="0">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.75"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.75"/>
    <control-setting axis="/controls/flight/elevator-trim" value="0.1"/>
    <control-setting axis="/sim/weight[0]/weight-lb" value ="110"/>
  </cruise>

  <!-- pilot's eyepoint -->
  <cockpit x="2.514" y="0.0" z="-0.221"/>

  <fuselage ax="3.978" ay="0" az="-0.181" bx="-4.0" by="0" bz="-0.181" width="0.728" taper="0.2" midpoint="0.5"/>

  <wing x="2.579" y="0" z="0.054"
        chord="1.60"
        length="4.87"
        taper="1.0"
        incidence="2"
        twist="-3"
        sweep="0"
        dihedral="5"
        camber="0.065">
        <stall aoa="18" width="4" peak="1.5"/>
        <flap0 start=".31" end="0.85" lift="1.5" drag="1.4"/>
        <control-input axis="/controls/flight/aileron" control="FLAP0" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP0" split="true"/>
        <control-output control="FLAP0" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP0" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </wing>

  <hstab x="-2.887" y="0.0" z="-0.320"
         chord="1.13"
         length="1.49"
         taper="0.8"
         effectiveness="1.24"
         sweep="0">
         <stall aoa="16" width="4" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.2"/>
         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-3.386" y="0" z="-0.855"
         taper="0.38"
         effectiveness="2.0"
         length="1.31"
         chord="1.37"
         sweep="0"
         incidence="1.5">
         <stall aoa="16" width="4" peak="1.5"/>
         <flap0 start="0" end="1" lift="2.0" drag="1.2"/>
         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

  <propeller x="3.681" y="0.0" z="0.324"
             mass="150"
             moment="4"
             radius="0.90"
	     cruise-speed="50"
             cruise-rpm="2150"
             cruise-alt="8000"
             cruise-power="30"
             takeoff-power="30"
             takeoff-rpm="2300"
             eng-power="30"
             eng-rpm="2500">
             <actionpt x="3.827" y="0.0" z="0.324"/>
             <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
             <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
             <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
             <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
  </propeller>

  <gear x="3.367" y="0.376" z="-1.193"
        compression="0.01">
  </gear>

  <gear x="3.367" y="-0.376" z="-1.193"
        compression="0.01">
  </gear>

  <gear x="-0.867" y="0" z="-1.158" 
        compression="0.01">
  </gear>

  <tank x="2.806" y="0" z="0.318" capacity="56" />

  <!-- pilot -->
  <weight x="2.616" y="0" z="-0.421" mass-prop="/sim/weight[0]/weight-lb"/>

  <!-- CG Middle of chord : x=2.579 y=0 z=0.054 -->
  <ballast x="2.5" y="0" z="-1" mass="50"/>

  <!-- hitch -->
  <hitch name="aerotow" 
         x="-5.0" y="0" z="-0.65"
         force-is-calculated-by-other="1">
         <tow length="60" 
              weight-per-meter="0.035"
              elastic-constant="9000"
              break-force="10000"
              mp-auto-connect-period="1.0"/>
         <winch max-tow-length="1000"
                min-tow-length="60"
                initial-tow-length="60"/>
  </hitch>

</airplane>
