<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>21.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>structure1</object-name>
    <object-name>structure2</object-name>
    <object-name>axe</object-name>
    <object-name>patte</object-name>
    <object-name>ailes</object-name>
    <object-name>queue</object-name>
    <object-name>ailessoie</object-name>
    <object-name>queuesoie</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronGsoie</object-name>
    <object-name>aileronD</object-name>
    <object-name>aileronDsoie</object-name>
    <object-name>manche</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>moteur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>resevoir</object-name>

    <!-- Objets transparents -->
    <object-name>cables</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>cables</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/21/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.763 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.895 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.821 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.325 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <name>Derive</name>
    <object-name>queue</object-name>
    <object-name>queuesoie</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Derive</object-name>
    <property>controls/flight/elevator</property>
    <factor>15</factor>
    <center>
      <x-m>  2.857</x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.323 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>Derive</object-name>
    <property>controls/flight/rudder</property>
    <factor>15</factor>
    <center>
      <x-m>  2.839</x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.323 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <name>AileronGauche</name>
    <object-name>aileronG</object-name>
    <object-name>aileronGsoie</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AileronGauche</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -1.475 </x1-m>
      <y1-m> -1.107 </y1-m>
      <z1-m>  0.065 </z1-m>
      <x2-m> -1.475 </x2-m>
      <y2-m> -2.493 </y2-m>
      <z2-m>  0.335 </z2-m>
    </axis>
  </animation> 

  <animation>
    <name>AileronDroit</name>
    <object-name>aileronD</object-name>
    <object-name>aileronDsoie</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AileronDroit</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -1.475 </x1-m>
      <y1-m>  2.493 </y1-m>
      <z1-m>  0.335 </z1-m>
      <x2-m> -1.475 </x2-m>
      <y2-m>  1.107 </y2-m>
      <z2-m>  0.065 </z2-m>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> -30 </factor>
    <axis>
      <x1-m> -3.366 </x1-m>
      <y1-m> -0.383 </y1-m>
      <z1-m> -0.887 </z1-m>
      <x2-m> -3.366 </x2-m>
      <y2-m> -0.274 </y2-m>
      <z2-m> -0.906 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> -30 </factor>
    <axis>
      <x1-m> -3.366 </x1-m>
      <y1-m>  0.274 </y1-m>
      <z1-m> -0.906 </z1-m>
      <x2-m> -3.366 </x2-m>
      <y2-m>  0.383 </y2-m>
      <z2-m> -0.887 </z2-m>
    </axis>
  </animation>

</PropertyList>

