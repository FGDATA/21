<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>siege</object-name>
    <object-name>support</object-name>
    <object-name>manche</object-name>
    <object-name>axe</object-name>
    
    <!-- Objets transparents -->
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/21/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.763 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.895 </z-m>
    </offsets>
  </model>

  <animation>
    <name>IntDirectionComplete</name>
    <object-name>manche</object-name>
  </animation>
  
  <animation>
    <name>IntProfondeurComplete</name>
    <object-name>manche</object-name>
    <object-name>support</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntProfondeurComplete</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -15 </factor>
    <center>
      <x-m> -2.884</x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.865 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntDirectionComplete</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -2.884</x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.865 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
</PropertyList>
